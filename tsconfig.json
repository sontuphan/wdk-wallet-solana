{
  "compilerOptions": {
    "rootDir": ".",
    "target": "ES2015",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "skipLibCheck": true,
    "stripInternal": true,
    "outDir": "./types"
  },
  "include": ["index.js", "src/**/*.js"]
}
